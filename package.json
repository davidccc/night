    "test": "npm run test --workspace=@night-king/web",
    "test:web": "npm run test --workspace=@night-king/web",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "typescript": "^5.6.2"
  }
}
