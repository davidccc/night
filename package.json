  "version": "0.1.0",
  "description": "Monorepo for the Night-king LINE OMO system (LINE Bot + LIFF Web + MySQL).",
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@night-king/web",
